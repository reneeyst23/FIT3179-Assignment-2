{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "width": 100,
    "height": 200,
    "autosize": "pad",
    "signals": [
        {
            "name": "selectedDate",
            "value": 2015,
            "bind": {
                "input": "select",
                "options": [
                    2015,
                    2016,
                    2017,
                    2018,
                    2019,
                    2020,
                    2021,
                    2022
                ],
                "name": "Year: "
            }
        }
    ],
    "title": {
        "text": "Types of Early Childhood Deaths", 
        "fontSize": 30,
        "font": "Arial",
        "anchor": "start",
        "color": "black"
    },
    "data": [
        {
            "name": "rawData",
            "url": "https://raw.githubusercontent.com/reneeyst23/FIT3179-Assignment-2/refs/heads/main/data/deaths_early_childhood_state.csv",
            "format": { "type": "csv" },
            "transform": [
                { "type": "formula", "as": "parsed_date", "expr": "utcParse(datum.date, '%d/%m/%Y')" },
                { "type": "formula", "as": "year", "expr": "year(datum.parsed_date)" },
                { "type": "formula", "as": "value", "expr": "datum.abs" },
                { "type": "formula", "as": "source", "expr": "datum.state" },
                {
                    "type": "formula",
                    "as": "target",
                    "expr": "datum.type === 'perinatal' ? 'Perinatal' : datum.type === 'neonatal' ? 'Neonatal' : datum.type === 'infant' ? 'Infant' : datum.type === 'toddler' ? 'Toddler' : datum.type"
                },
                {
                    "type": "filter",
                    "expr": "datum.year === selectedDate"
                }
            ]
        },
        {
            "name": "sourceNodes",
            "source": "rawData",
            "transform": [
                {
                    "type": "aggregate",
                    "groupby": ["source"],
                    "as": ["sourceNode"],
                    "ops": ["sum"],
                    "fields": ["value"]
                },
                {
                    "type": "window",
                    "ops": ["row_number"],
                    "as": ["sourceID"]
                }
            ]
        },
        {
            "name": "targetNodes",
            "source": "rawData",
            "transform": [
                {
                    "type": "aggregate",
                    "groupby": ["target"],
                    "as": ["targetNode"],
                    "ops": ["sum"],
                    "fields": ["value"]
                },
                {
                    "type": "window",
                    "ops": ["row_number"],
                    "as": ["targetID"]
                }
            ]
        },
        {
            "name": "links",
            "source": "rawData",
            "transform": [
                {
                    "type": "lookup",
                    "from": "sourceNodes",
                    "key": "source",
                    "fields": ["source"],
                    "as": ["sourceIndex"]
                },
                {
                    "type": "lookup",
                    "from": "targetNodes",
                    "key": "target",
                    "fields": ["target"],
                    "as": ["targetIndex"]
                }
            ]
        }
    ],
    "scales": [
        {
            "name": "ySource",
            "type": "band",
            "domain": { "data": "sourceNodes", "field": "sourceID" },
            "range": [0, 700],
            "padding": 0.2
        },
        {
            "name": "yTarget",
            "type": "band",
            "domain": { "data": "targetNodes", "field": "targetID" },
            "range": [0, 700],
            "padding": 0.1
        },
        {
            "name": "color",
            "type": "ordinal",
            "domain": { "data": "rawData", "fields": ["source", "target"] },
            "range": [
                "#4E79A7", "#A0CBE8", "#F28E2B", "#FFBE7D", "#B6992D", 
                "#F1CE63", "#E15759", "#FF9D9A", "#BAB0AC", "#FABFD2", 
                "#AEC7E8", "#B07AA1", "#D7B5A6", "#ff9896", "#c5b0d5", 
                "#FFBC79", "#849DB1", "#c7c7c7", "#dbdb8d", "#9edae5"
            ]
        },
        {
            "name": "linkWidth",
            "type": "linear",
            "domain": [1, 500],
            "range": [1, 20]
        }
    ],
    "marks": [
        {
            "type": "rect",
            "from": { "data": "sourceNodes" },
            "encode": {
            "enter": {
                    "x": { "value": 5 },
                    "y": { "scale": "ySource", "field": "sourceID" },
                    "width": { "value": 110 },
                    "height": { "scale": "ySource", "band": 1.5 },
                    "fill": { "scale": "color", "field": "source" },
                    "tooltip": { "signal": "datum.source || datum.target" }
                }
            }
        },
        {
            "type": "rect",
            "from": { "data": "targetNodes" },
            "encode": {
            "enter": {
                    "x": { "value": 1200 },
                    "y": { "scale": "yTarget", "field": "targetID" },
                    "width": { "value": 80 },
                    "height": { "scale": "yTarget", "band": 1 },
                    "fill": { "scale": "color", "field": "target" },
                    "tooltip": { "signal": "datum.source || datum.target" }
                }
            }
        },
        {
            "type": "path",
            "from": { "data": "links" },
            "encode": {
            "update": {
                    "path": {
                        "signal": "'M' + 100 + ',' + (scale('ySource', datum.sourceIndex.sourceID) + bandwidth('ySource') / 2) + 'C' + 950 + ',' + (scale('ySource', datum.sourceIndex.sourceID) + bandwidth('ySource') / 2) + ' ' + 950 + ',' + (scale('yTarget', datum.targetIndex.targetID) + bandwidth('yTarget') / 2) + ' ' + 1200 + ',' + (scale('yTarget', datum.targetIndex.targetID) + bandwidth('yTarget') / 2)"
                    },
                    "stroke": { "scale": "color", "field": "source" },
                    "strokeWidth": { "signal": "scale('linkWidth', datum.value)" },
                    "opacity": { "value": 0.6 },
                    "tooltip": {
                        "signal": "{'State': datum.source, 'Type of Early Childhood': datum.target, 'Number of Death': datum.value, 'Year': selectedDate}"
                    }
                }
            }
        },
        {
            "type": "text",
            "from": { "data": "sourceNodes" },
            "encode": {
            "enter": {
                    "x": { "value": 61 },
                    "y": { "scale": "ySource", "field": "sourceID", "offset": 20 },
                    "fill": { "value": "black" },
                    "text": { "field": "source" },
                    "align": { "value": "center" },
                    "baseline": { "value": "middle" },
                    "fontSize": { "value": 12 }
                }
            }
        },
        {
            "type": "text",
            "from": { "data": "targetNodes" },
            "encode": {
                "enter": {
                    "x": { "value": 1240 },
                    "y": { "scale": "yTarget", "field": "targetID", "offset": 70 },
                    "fill": { "value": "black" },
                    "text": { "field": "target" },
                    "align": { "value": "center" },
                    "baseline": { "value": "middle" },
                    "fontSize": { "value": 12 }
                }
            }
        }
    ]
}
  