{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/reneeyst23/FIT3179-Assignment-2/refs/heads/main/data/death_maternal_state.csv", 
        "format": {"type": "csv"}
    },
    "width": 400,
    "height": 400,
    "title": {
        "text": "Maternal Death Distribution", 
        "fontSize": 20,
        "font": "Arial",
        "anchor": "start",
        "color": "black",
        "offset": 20
    },
    "params": [
        {
            "name": "year_selection",
            "bind": {
                "input": "select",
                "options": [
                    "2015",
                    "2016",
                    "2017",
                    "2018",
                    "2019",
                    "2020",
                    "2021",
                    "2022"
                ],
                "labels": [
                    "2015",
                    "2016",
                    "2017",
                    "2018",
                    "2019",
                    "2020",
                    "2021",
                    "2022"
                ],
                "name": "Year: "
            },
            "value": "2015"
        }
    ],
    "transform": [
        {
            "calculate": "utcParse(datum.date, '%d/%m/%Y')",  
            "as": "parsed_date"
        },
        {
            "calculate": "year(datum.parsed_date)",
            "as": "year"
        },
        {
            "filter": "datum.year == year_selection"
        }
    ],
    "encoding": {
        "y": {
            "field": "state", 
            "type": "ordinal", 
            "title": "State"
        },
        "x": {
            "field": "abs", 
            "type": "quantitative", 
            "title": "Number of Deaths"
        }
    },
    "layer": [
        {
            "mark": {
                "type": "bar",
                "size": 3
            },
            "encoding": {
                "x": {
                    "field": "abs", 
                    "type": "quantitative"
                },
                "y": {
                    "field": "state", 
                    "type": "ordinal"
                },
                "color": {
                    "field": "state",
                    "type": "ordinal",
                    "scale": {
                        "range": [
                            "#4E79A7", "#A0CBE8", "#F28E2B", "#FFBE7D", "#B6992D", 
                            "#F1CE63", "#E15759", "#FF9D9A", "#BAB0AC", "#FABFD2", 
                            "#AEC7E8", "#B07AA1", "#D7B5A6", "#ff9896", "#c5b0d5", 
                            "#FFBC79"   
                        ]
                    }
                },
                "tooltip": [
                    {"field": "state", "type": "nominal", "title": "State"},
                    {"field": "abs", "type": "quantitative", "title": "Number of Deaths"},
                    {"field": "year", "type": "ordinal", "title": "Year"}
                ]
            }
        },
        {
            "mark": {
                "type": "circle",
                "size": 100
            },
            "encoding": {
                "x": {
                    "field": "abs", 
                    "type": "quantitative"
                },
                "y": {
                    "field": "state", 
                    "type": "ordinal"
                },
                "color": {
                    "field": "state",
                    "type": "ordinal",
                    "scale": {
                        "range": [
                            "#4E79A7", "#A0CBE8", "#F28E2B", "#FFBE7D", "#B6992D", 
                            "#F1CE63", "#E15759", "#FF9D9A", "#BAB0AC", "#FABFD2", 
                            "#AEC7E8", "#B07AA1", "#D7B5A6", "#ff9896", "#c5b0d5", 
                            "#FFBC79" 
                        ]
                    },
                    "legend": null
                },
                "tooltip": [
                    {"field": "state", "type": "nominal", "title": "State"},
                    {"field": "abs", "type": "quantitative", "title": "Number of Deaths"},
                    {"field": "year", "type": "ordinal", "title": "Year"}
                ]
            }
        }
    ]
}