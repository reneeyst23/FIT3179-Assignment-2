{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/reneeyst23/FIT3179-Assignment-2/refs/heads/main/data/death_sex_ethnic_state.csv"
    },
    "width": 550,
    "height": 300,
    "resolve": {
        "scale": {"color": "independent"}
    },
    "params": [
        {
            "name": "state_selection",
            "bind": {
                "input": "select",
                "options": [
                    "Johor",
                    "Kedah",
                    "Kelantan",
                    "Melaka",
                    "Negeri Sembilan",
                    "Pahang",
                    "Perak",
                    "Perlis",
                    "Pulau Pinang",
                    "Sabah",
                    "Sarawak",
                    "Selangor",
                    "Terengganu",
                    "W.P. Kuala Lumpur",
                    "W.P. Labuan",
                    "W.P. Putrajaya"
                ],
                "labels": [
                    "Johor",
                    "Kedah",
                    "Kelantan",
                    "Melaka",
                    "Negeri Sembilan",
                    "Pahang",
                    "Perak",
                    "Perlis",
                    "Pulau Pinang",
                    "Sabah",
                    "Sarawak",
                    "Selangor",
                    "Terengganu",
                    "W.P. Kuala Lumpur",
                    "W.P. Labuan",
                    "W.P. Putrajaya"
                ],
                "name": "State: "
            },
            "value": "Johor"
        }
    ],
    "transform": [
        {
            "lookup": "sex",
            "from": {
                "data": {
                    "values": [
                        { "sex": "male", "gender": "Male" },
                        { "sex": "female", "gender": "Female" }
                    ]
                },
                "key": "sex",
                "fields": ["gender"]
            }
        },
        {
            "calculate": "utcParse(datum.date, '%d/%m/%Y')",  
            "as": "parsed_date"
        },
        {
            "calculate": "year(datum.parsed_date)",
            "as": "year"
        },
        {
            "filter": "datum.state == state_selection"
        }
    ],
    "layer": [
        {
            "mark": "bar",
            "encoding": {
            "x": { 
                "field": "year", 
                "type": "ordinal", 
                "stack": "zero",
                "title": "Year"
            },
            "y": {
                "aggregate": "sum",
                "field": "abs", 
                "type": "quantitative",
                "title": "Total Number of Deaths"
            },
            "color": {
                "field": "gender", 
                "type": "nominal",
                "legend": {
                    "title": null,
                    "orient": "top"
                },
                "scale": {
                    "domain": ["Male", "Female"],
                    "range": ["skyblue", "lightpink"]
                }   
            },
            "tooltip": [
                {"field": "state", "type": "nominal", "title": "State"},
                {"field": "gender", "type":"nominal", "title": "Gender"},
                {"field": "abs", "aggregate": "sum", "type": "quantitative", "title": "Number of Death"},
                {"field": "year", "type": "ordinal", "title": "Year"}
            ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "center",
                "baseline": "middle",
                "dy": -15
            },
            "encoding": {
                "text": {
                    "aggregate": "sum",
                    "field": "abs",
                    "type": "quantitative"
                },
                "color": {
                    "value": "black"
                },
                "x": { 
                    "field": "year", 
                    "type": "ordinal", 
                    "stack": "zero",
                    "title": "Year"
                },
                "y": {
                    "aggregate": "sum",
                    "field": "abs", 
                    "type": "quantitative",
                    "title": "Total Number of Deaths"
                }
            }
        },
        {
            "transform": [
                {
                    "aggregate": [{"op": "sum", "field": "abs", "as": "total_deaths"}],
                    "groupby": ["year"]
                }
            ],
            "mark": {
                "type": "line",
                "color": "black",
                "strokeWidth": 3
            },
            "encoding": {
                "x": {
                    "field": "year",
                    "type": "ordinal",
                    "title": "Year"
                },
                "y": {
                    "field": "total_deaths",
                    "type": "quantitative"
                },
                "tooltip": [
                    {"field": "year", "type": "ordinal", "title": "Year"},
                    {"field": "total_deaths", "type": "quantitative", "title": "Total Deaths"}
                ]
            }
        },
        {
            "mark": {
                "type": "circle",
                "size": 100,
                "color": "black"
            },
            "encoding": {
                "x": {
                    "field": "year",
                    "type": "ordinal"
                },
                "y": {
                    "aggregate": "sum",
                    "field": "abs",
                    "type": "quantitative"
                },
                "tooltip": [
                    {"field": "year", "type": "ordinal", "title": "Year"},
                    {"field": "abs", "aggregate": "sum", "type": "quantitative", "title": "Total Number of Deaths"}
                ]
            }
        }
    ]
  }
  