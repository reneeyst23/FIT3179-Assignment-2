{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "config": {
        "style": {
            "tooltip": {
                "align": "center"
            }
        },
        "background": "#f0f8ff"
    },
    "width": 1030,
    "height": 500,
    "title": {
        "text": "Death Rate in Malaysian States", 
        "fontSize": 30,
        "font": "Arial",
        "anchor": "start",
        "color": "black",
        "offset": 15
    },
    "projection": {
        "type": "equalEarth",
        "center": [109, 4.5],  
        "scale": 2800
    },
    "params": [
        {
            "name": "selected_year",
            "value": 2015,
            "bind": {
                "input": "range",
                "min": 2015,
                "max": 2022,
                "step": 1,
                "name": "Year: "
            }
        }
    ],
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/reneeyst23/FIT3179-Assignment-2/refs/heads/main/data/map.json",  
                "format": {"type": "topojson", "feature": "1"}
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/reneeyst23/FIT3179-Assignment-2/refs/heads/main/data/death_state.csv",  
                "format": {"type": "csv"}
            },
            "transform": [
                {
                    "calculate": "utcParse(datum.date, '%d/%m/%Y')",  
                    "as": "parsed_date"
                },
                {
                    "calculate": "year(datum.parsed_date)", 
                    "as": "year"
                },
                {
                    "filter": "datum.year == selected_year"  
                },
                {
                    "lookup": "state",  
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/reneeyst23/FIT3179-Assignment-2/refs/heads/main/data/my-3.json",  
                            "format": {"type": "topojson", "feature": "my"}
                        },
                        "key": "properties.name",  
                        "fields": ["type", "geometry"]  
                    }
                },
                {
                    "calculate": "datum.rate <= 3.9 ? '<4' : datum.rate <= 4.9 ? '5' : datum.rate <= 5.9 ? '6' : datum.rate <= 6.9 ? '7' : datum.rate <= 7.9 ? '8' : datum.rate <= 8.9 ? '9' : '>10'",
                    "as": "rateCategory"
                }
            ],
            "mark": "geoshape",
            "encoding": {
                "color": {
                    "field": "rateCategory",
                    "title": "Death Rate per 1000 Population",
                    "type": "nominal",
                    "scale": {
                        "domain": ["<4", "5", "6", "7", "8", "9", ">10"],
                        "range": ["#f3e9ff", "#e0c8f8", "#b176e3", "#9e41dc", "#7a2aab", "#54137a", "#33064b"]
                    },
                    "legend": {
                        "symbolType": "square",
                        "titleFontSize": 15, 
                        "labelFontSize": 17,    
                        "orient": "right", 
                        "titleFont": "Arial",  
                        "labelFont": "Arial",
                        "titlePadding": 10,
                        "titleLimit": 250,
                        "labelPadding": 25  
                    }
                },
                "tooltip": [
                    {"field": "state", "type": "nominal", "title": "State"},
                    {"field": "rate", "type": "quantitative", "title": "Death Rate"},
                    {"field": "year", "type": "ordinal", "title": "Year"}
                ]
            }
        },
        {
            "data": {
                "values": [
                    {"year": 2015, "annotation": "Sabah"},
                    {"year": 2016, "annotation": "Sabah"},
                    {"year": 2017, "annotation": "Sabah"},
                    {"year": 2018, "annotation": "Sabah"},
                    {"year": 2019, "annotation": "Sabah"},
                    {"year": 2020, "annotation": "Sabah"},
                    {"year": 2021, "annotation": "Sabah"},
                    {"year": 2022, "annotation": "Sabah"}
                ]
            },
            "transform": [
                {
                    "filter": "datum.year == selected_year"
                }
            ],
            "mark": {
                "type": "text",
                "align": "left",
                "dx": 745,
                "dy": 135,
                "fontSize": 15,
                "color": "black"
            },
            "encoding": {
                "x": {
                    "value": 10  
                },
                "y": {
                    "value": 30  
                },
                "text": {
                    "field": "annotation"
                }
            }
        },
        {
            "data": {
                "values": [
                    {"year": 2015, "annotation": "Selangor"},
                    {"year": 2016, "annotation": "Selangor"},
                    {"year": 2017, "annotation": "Selangor"},
                    {"year": 2018, "annotation": "Selangor"},
                    {"year": 2019, "annotation": "Selangor"},
                    {"year": 2020, "annotation": "Selangor"},
                    {"year": 2021, "annotation": "Selangor"},
                    {"year": 2022, "annotation": "Selangor"}
                ]
            },
            "transform": [
                {
                    "filter": "datum.year == selected_year"
                }
            ],
            "mark": {
                "type": "text",
                "align": "left",
                "dx": 115,
                "dy": 285,
                "fontSize": 15,
                "color": "black"
            },
            "encoding": {
                "x": {
                    "value": 10  
                },
                "y": {
                    "value": 30  
                },
                "text": {
                    "field": "annotation"
                }
            }
        },
        {
            "data": {
                "values": [
                    {"year": 2015, "annotation": "Perak"},
                    {"year": 2016, "annotation": "Perak"},
                    {"year": 2017, "annotation": "Perak"},
                    {"year": 2018, "annotation": "Perak"},
                    {"year": 2019, "annotation": "Perak"},
                    {"year": 2020, "annotation": "Perak"},
                    {"year": 2021, "annotation": "Perak"},
                    {"year": 2022, "annotation": "Perak"}
                ]
            },
            "transform": [
                {
                    "filter": "datum.year == selected_year"
                }
            ],
            "mark": {
                "type": "text",
                "align": "left",
                "dx": 105,
                "dy": 220,
                "fontSize": 15,
                "color": "black"
            },
            "encoding": {
                "x": {
                    "value": 10  
                },
                "y": {
                    "value": 30  
                },
                "text": {
                    "field": "annotation"
                }
            }
        }
    ]
}
